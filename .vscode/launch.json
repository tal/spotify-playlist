  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test Publish",
      // "preLaunchTask": "build ts",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "${input:env}"
      },
      "args": ["${workspaceFolder}/dist/cli.js", "${input:action}"],
      "sourceMaps": true
    }
  ],
  "inputs": [
    {
      "id": "action",
      "description": "Action to run",
      "type": "pickString",
      "options": ["archive", "promote", "demote", "instant","neo-tribal","scandinavian"]
    },
    {
      "id": "env",
      "description": "dev or prod",
      "type": "pickString",
      "options": ["dev", "prod"]
    }
  ]
}
