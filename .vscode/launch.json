  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test Publish",
      // "preLaunchTask": "build ts",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "dev"
      },
      "args": ["${workspaceFolder}/dist/cli.js", "${input:action}"],
      "sourceMaps": true
    }
  ],
  "inputs": [{
    "id": "action",
    "description": "Action to run",
    "type": "pickString",
    "options": ["archive", "promote", "demote", "instant"]
  }]
}
